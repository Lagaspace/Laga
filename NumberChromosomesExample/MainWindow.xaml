<Window x:Class="GenerateChromosomes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerateChromosomes"
        mc:Ignorable="d"
        Title="Number Chromosome Examples" Height="350" Width="680" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="label" Content="Chromosome Types: Random" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <StackPanel Margin="10,30,10,10" Orientation="Horizontal" HorizontalAlignment="Center" Width="640">
            <TextBox x:Name="txtBox"  Margin="0,10,10,0" Width="120" TextWrapping="Wrap" Text="doubles: 0d - 1d" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
            <TextBox x:Name="txtBox2"  Margin="0,10,10,0" Width="120" TextWrapping="Wrap" Text="floats: 0f - 1f" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
            <TextBox x:Name="txtBox3"  Margin="0,10,10,0" Width="120" TextWrapping="Wrap" Text="int Random: 0 - 20" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
            <TextBox x:Name="txtBox4"  Margin="0,10,10,0" Width="120" TextWrapping="Wrap" Text="int swap: 0 - 20" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
            <TextBox x:Name="txtBox5"  Margin="0,10,10,0" Width="120" TextWrapping="Wrap" Text="int binary:" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
        </StackPanel>

    </Grid>
</Window>
