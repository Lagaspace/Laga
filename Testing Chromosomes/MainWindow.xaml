<Window x:Class="Testing_Chromosomes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing_Chromosomes"
        mc:Ignorable="d"
        Title="Testing Binary Chromosome Char" Height="350" Width="525" Background="White">
    <Grid>
        <TextBox x:Name="txtBoxChar" Margin="118,10,10,10" TextWrapping="Wrap" Background="White" BorderBrush="#FFCEDBFF"  ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnRun" Content="Execute" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Click="btnRun_Click"/>
        <TextBox x:Name="txtBoxIter" HorizontalAlignment="Left" Height="18" Margin="10,66,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="70" TextChanged="textBox_TextChanged" TextAlignment="Center"/>
        <Label x:Name="label" Content="size of chromosome" HorizontalAlignment="Left" Margin="7,44,0,0" VerticalAlignment="Top" Width="103" FontSize="9"/>

    </Grid>
</Window>
